<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogAnimationENTER">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="editViewSignIN" parent="TextAppearance.AppCompat">

        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorGrayPure</item>
        <item name="colorControlNormal">@color/colorGrayPure</item>
        <item name="colorControlActivated">@color/colorGrayPure</item>
    </style>

    <style name="editViewSignUP" parent="TextAppearance.AppCompat">

        <item name="android:textSize">15sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorGrayPure</item>
        <item name="colorControlNormal">@color/colorGrayPure</item>
        <item name="colorControlActivated">@color/colorGrayPure</item>
    </style>


    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorRedBara</item>
        <item name="colorControlActivated">@color/colorRedBara</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorRedBara</item>
        <item name="android:textColorPrimary">@color/colorRedBara</item>

    </style>

    <style name="Theme_with_ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



</resources>
