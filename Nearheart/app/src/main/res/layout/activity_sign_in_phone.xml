<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".View.SignInPhoneActivity">


    <com.rifcode.nearheart.FontsWidgets.TvGothamRoundedBook
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/neartpone"
        android:textSize="15sp"
        android:textColor="@color/colorBlackOne"
        android:textAlignment="center"
        android:lineSpacingExtra="10sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="15dp"
        >


        <com.rifcode.nearheart.FontsWidgets.TvGothamRoundedMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/phone_number"
            android:textColor="@color/colorRedBara"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccpPhoneNumberSigninPhone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                app:ccp_autoDetectCountry="true"
                app:ccp_showFullName="false"
                app:ccp_autoDetectLanguage="true"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="true" />

            <com.rifcode.nearheart.FontsWidgets.EdtGothamRoundedMedium
                android:theme="@style/editViewSignUP"
                android:id="@+id/edtNumberPhoneSigninPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="123456789"
                android:inputType="phone"
                android:maxLength="30"
                android:textSize="18sp"
                android:maxLines="1"
                android:textColor="@color/colorGrayPure"
                android:textColorHint="@color/colorGry"
                />

        </LinearLayout>

        <com.rifcode.nearheart.FontsWidgets.BtnGothamRoundedMedium
            android:id="@+id/btnSendPhoneSignInPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_box_barared_gray_highdp"
            android:text="@string/send"
            android:textColor="@color/colorGrayPure"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:orientation="vertical"
        android:padding="8dp"
        android:id="@+id/lyvirifyCodephone"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        >


        <com.rifcode.nearheart.FontsWidgets.TvGothamRoundedMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/verify_phone_number"
            android:textColor="@color/colorRedBara"
            android:textSize="16sp" />


        <com.rifcode.nearheart.FontsWidgets.EdtGothamRoundedMedium
            android:theme="@style/editViewSignUP"
            android:id="@+id/edtVerifyNumberPhoneSigninPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="------"
            android:gravity="center"
            android:textSize="20sp"
            android:maxLength="10"
            android:maxLines="1"
            android:textColor="@color/colorGrayPure"
            android:textColorHint="@color/colorGry"
            />

        <com.rifcode.nearheart.FontsWidgets.BtnGothamRoundedMedium
            android:id="@+id/btnVerifyPhoneSignInPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_ronded_green"
            android:text="@string/verify"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>



</LinearLayout>