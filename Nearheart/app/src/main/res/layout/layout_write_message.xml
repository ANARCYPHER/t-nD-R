<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    android:layout_marginBottom="3dp"
    android:gravity="bottom"
    android:background="@null"
    >

    <!--<include layout="@layout/custom_audio"-->
        <!--android:visibility="gone"-->
        <!--/>-->




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/add_media"
            android:id="@+id/imgvSendImageChat"
            />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shadow"
        android:layout_weight="1"
        android:layout_gravity="center"
        >

        <com.rifcode.nearheart.FontsWidgets.EdtGothamRoundedMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/write_a_message"
            android:inputType="textMultiLine"
            android:maxLength="1700"
            android:maxLines="10"
            android:layout_gravity="center_vertical"
            android:textColorHint="@color/colorGryForce"
            android:padding="15dp"
            android:lineSpacingExtra="2dp"
            android:id="@+id/txtSendMessage"
            android:textSize="16sp"
            android:background="@null"
            android:visibility="visible"
            />





    </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_send_message_chat"
            android:id="@+id/imgBtnSend"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
             />

</LinearLayout>

</LinearLayout>
