<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_white_barared_dialogs"
    android:padding="25dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.rifcode.nearheart.FontsWidgets.TvGothamRoundedMedium
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/error"
            android:textSize="20sp"
            android:textColor="@color/colorGrayPure"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exit_dialog"
            android:id="@+id/imgvExitdialogEnable_discsetting"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_error"
            />


    <com.rifcode.nearheart.FontsWidgets.TvGothamRoundedBook
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/enable_discsetting"
        android:textSize="16sp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/colorGrayPure"
        />

    </LinearLayout>


</LinearLayout>